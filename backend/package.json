{
  "name": "ssab-skiftschema-backend",
  "version": "1.0.0",
  "description": "Backend API for SSAB Skiftschema Premium",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --verbose --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "validate": "npm run lint && npm run test:ci && npm run audit",
    "build": "echo 'No build step required for Node.js'",
    "health": "node scripts/health-check.js",
    "test:calendar": "NODE_ENV=test jest --testPathPattern=calendar",
    "test:schedule": "NODE_ENV=test jest --testPathPattern=scheduleGenerator",
    "serve:calendar": "nodemon server.js",
    "demo:calendar": "node scripts/calendar-demo.js",
    "demo:universal": "node scripts/universal-demo.js",
    "test:universal": "NODE_ENV=test jest --testPathPattern=universal"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js",
      "!server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ssab",
    "shift-scheduling",
    "express",
    "api",
    "supabase",
    "nodejs"
  ],
  "author": "SSAB Skiftschema Premium Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ssab-skiftschema-premium.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ssab-skiftschema-premium/issues"
  },
  "homepage": "https://github.com/your-username/ssab-skiftschema-premium#readme"
}
